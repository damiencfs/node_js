<script>
    let nbrjoueur=document.getElementById("nbrjoueur");
    let compteur=0;
    $('#ajouter').prop("disabled", true);
    $('#start').prop("disabled", true);

    let tableau_joueur = new Array();

    $("#validCompteur").click(function(){
        console.log(nbrjoueur.value);
        $('#ajouter').prop("disabled", false);
        
        tableau_joueur.length= nbrjoueur.value;
    })

    let nomjoueur=document.getElementById("nomjoueur");
    let tabljoueur=document.getElementById("tabljoueur");


    $("#ajouter").click(function(){
        console.log(compteur);
        tabljoueur.insertAdjacentHTML('beforeend', nomjoueur.value+' - ');
            
        tableau_joueur[compteur]=nomjoueur.value;
        
        console.log(tableau_joueur);

        compteur++ ;

        // Affichage du bouton start game
        if(compteur==nbrjoueur.value){
            $('#ajouter').prop("disabled", true);
            $('#start').prop("disabled", false);
        };
    }) 

 
 

</script>

</body>
<script src="js/main.js"></script>

</html>
